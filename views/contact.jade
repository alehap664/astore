extends layout

block content
    
    #contact-page.container
        .bg
            .row
                .col-sm-12
                    h2.title.text-center
                        | Liên hệ
                        strong= ' Chúng Tôi'
            .row
                .col-sm-8
                    .contact-form
                        h2.title.text-center Thông Tin Liên Hệ
                        .status.alert.alert-success(style='display: none')
                        form#main-contact-form.contact-form.row(action='/contact-us', method='POST')
                            if customer
                                .form-group.col-md-6
                                    input.form-control(type='text', name='fullName', value=customer.FullName, required='required', placeholder='Tên', disabled)
                                .form-group.col-md-6
                                    input.form-control(type='email', name='email', value= customer.Email, required='required', placeholder='Email', disabled)
                            else
                                .form-group.col-md-6
                                    input.form-control(type='text', name='fullName', required='required', placeholder='Name')
                                .form-group.col-md-6
                                    input.form-control(type='email', name='email', required='required', placeholder='Email')
                            .form-group.col-md-12
                                input.form-control(type='text', name='subject', required='required', placeholder='Subject')
                            .form-group.col-md-12
                                textarea#message.form-control(name='contactMessage', required='required', rows='8', placeholder='Nội dung bạn muốn gửi')
                            .form-group.col-md-12
                                input.btn.btn-primary.pull-right(type='submit', name='submit', value='Gửi')
                .col-sm-4
                    .contact-info
                        h2.title.text-center THÔNG TIN LIÊN HỆ CHÚNG TÔI
                        address
                            p Be Earning Website.
                            p Hochiminh
                            p Vietnam
                            p Mobile: 09123456789
                            p Fax:  031-666-1359
                            p Email: BeEarning@gmail.com
                        .social-networks
                            h2.title.text-center MẠNG XÃ HỘI
                            ul
                                li
                                    a(href='#')
                                        i.fa.fa-facebook
                                li
                                    a(href='#')
                                        i.fa.fa-twitter
                                li
                                    a(href='#')
                                        i.fa.fa-instagram
                                li
                                    a(href='#')
                                        i.fa.fa-youtube
