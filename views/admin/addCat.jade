extends admin

block details
    form(id='addCat', action='/admin/cat/add', method='POST')
        label(for='name') Tên loại sản phẩm
        br
        input(type='text', id='name', name='name', placeholder='Tên loại', required=true)
        br
        label(for='description') Mô tả loại sản phẩm
        textarea(id='description', name='description', required=true) Mô tả
        br
        label(for='image') Hình ảnh loại
        input(type='file', id='image', name='image' required=true)
        br
        button.dev-btn.btn.btn-default(type='submit') Lưu