extends info

block details

    h3 Lịch sử đơn hàng
    .table-responsive
        table.table.table-condensed
            thead
                tr
                    td #
                    td Ngày
                    td Trạng thái đơn
                    td Tổng cộng 
                    td
            tbody
                each order in orders
                    tr
                        td= order.OrderID
                        td= order.OrderDate
                        td= order.Status
                        td= order.Total + ' VND'
                        td
                            form(action='/usr/' + customer.Username + '/orders/' + order.OrderID, method='GET')
                                button.btn.btn-default.order-btn(type='submit')
                                    i.fa.fa-eye
                                    = ' Xem'